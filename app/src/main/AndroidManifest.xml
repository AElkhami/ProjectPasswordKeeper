<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmed.projectkeeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lg_lock"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailMainActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".WelcomeActivity" />
        <activity android:name=".WelcomeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".SubContactActivity"
            android:parentActivityName=".EmailMainActivity" />
        <activity android:name=".FortressGate" />
        <activity android:name=".EmailCreateForm" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>