<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elkhamitech.projectkeeper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lg_lock"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="987256bc635b349650c5e8671ce1c066fdf7ff98"
            />

        <activity android:name="com.elkhamitech.projectkeeper.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elkhamitech.projectkeeper.EmailMainActivity"
            android:parentActivityName="com.elkhamitech.projectkeeper.MainActivity" />
        <activity
            android:name="com.elkhamitech.projectkeeper.SignupActivity"
            android:parentActivityName="com.elkhamitech.projectkeeper.WelcomeActivity" />
        <activity android:name="com.elkhamitech.projectkeeper.WelcomeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name="com.elkhamitech.projectkeeper.LoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName="com.elkhamitech.projectkeeper.WelcomeActivity" />
        <activity
            android:name="com.elkhamitech.projectkeeper.SubContactActivity"
            android:parentActivityName="com.elkhamitech.projectkeeper.EmailMainActivity" />
        <activity android:name="com.elkhamitech.projectkeeper.FortressGate" />
        <activity android:name="com.elkhamitech.projectkeeper.EmailCreateForm" />
        <activity
            android:name="com.elkhamitech.projectkeeper.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>